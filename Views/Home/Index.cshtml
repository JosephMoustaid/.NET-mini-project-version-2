@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-0 px-0">
    <!-- Hero Section -->
    <header class="text-center py-5 px-0 mx-0 bg-primary text-white position-relative">
        <h1 class="display-4">Welcome to the Library Manager</h1>
        <p class="lead">Manage your library's books, members, and transactions effortlessly with our powerful and intuitive system.</p>
        <a href="#features" class="btn btn-light btn-lg">Learn More</a>
    </header>

    <!-- Features Section -->
    <section id="features" class="py-5 px-3">
        <h2 class="text-center mb-4">Features</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-book fa-3x mb-3"></i>
                        <h5 class="card-title">Book Management</h5>
                        <p class="card-text">Easily add, edit, and organize books in your library. Keep track of titles, authors, and more.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h5 class="card-title">Member Tracking</h5>
                        <p class="card-text">Manage members, track their borrowing history, and ensure that your library is well organized.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-clipboard-list fa-3x mb-3"></i>
                        <h5 class="card-title">Transaction Logs</h5>
                        <p class="card-text">Record and manage book loans, returns, and overdue transactions efficiently.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="bg-light py-5 px-3">
        <div class="container">
            <h2 class="text-center mb-4">About the Library Manager</h2>
            <p class="text-center lead">The Library Manager is a state-of-the-art web application designed to help you keep your library organized, ensuring seamless book management, member tracking, and transaction logging. Built using the latest technologies, it's a reliable tool for librarians and administrators.</p>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-5 px-3">
        <h2 class="text-center mb-4">Our Services</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Customizable User Interface</h5>
                        <p class="card-text">Tailor the interface to fit the needs of your library with easy-to-use options for customization.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Real-Time Data Sync</h5>
                        <p class="card-text">Changes made to the system are reflected in real time, ensuring that you always have up-to-date information.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="bg-primary text-white text-center py-5 ">
        <h2>Get Started Today</h2>
        <p>Join thousands of other libraries and start managing your resources with ease. Sign up for a free trial now!</p>
        <a href="/signup" class="btn btn-light btn-lg">Sign Up</a>
    </section>

    <!-- Testimonials Section (Optional) -->
    <section id="testimonials" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">What Our Users Say</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <p class="card-text">"The Library Manager has transformed the way we operate our library. It’s so easy to manage books, members, and transactions now!"</p>
                            <h5>- John Doe, Librarian</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <p class="card-text">"A powerful tool that helps us stay organized and efficient. I highly recommend it to any library administrator."</p>
                            <h5>- Jane Smith, Library Admin</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <p class="card-text">"This system has streamlined our processes and made our library much more user-friendly."</p>
                            <h5>- Bob Lee, Library Assistant</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2024 Library Manager | <a href="/privacy" class="text-white">Privacy Policy</a> | <a href="/terms" class="text-white">Terms of Service</a></p>
        <div>
            <a href="https://facebook.com" class="text-white mx-2"><i class="fab fa-facebook"></i></a>
            <a href="https://twitter.com" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
            <a href="https://linkedin.com" class="text-white mx-2"><i class="fab fa-linkedin"></i></a>
        </div>
    </footer>
</div>

