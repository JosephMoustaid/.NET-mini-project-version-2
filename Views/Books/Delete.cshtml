@model LibraryManagerProject.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>Author: @Model.Author</p>
    <p>Genre: @Model.Genre</p>
    <p>Published Date: @Model.PublishedDate.ToShortDateString()</p>
    <p>Available: @(Model.IsAvailable ? "Yes" : "No")</p>
    @if (!string.IsNullOrEmpty(Model.CoverImagePath))
    {
        <p>Cover Image:</p>
        <img src="@Model.CoverImagePath" alt="Book Cover" style="max-width: 200px;" />
    }
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>